{
  "include": ["src/**/*"],
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "module": "esnext",
    "target": "esnext",
    "isolatedModules": true,
    "removeComments": true,
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "noEmit": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true
  }
}
