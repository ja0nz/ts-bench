{
  "compilerOptions": {
    "module": "esNext",
    "target": "esNext",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importsNotUsedAsValues": "error",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true
  }
}
